	}
	li:last-of-type {
		margin-top: 1rem;
	}
	.icon {
		height: 1.5rem;
		padding: 0.1rem 0;
		vertical-align: middle;
		box-sizing: border-box;
	}
	.fill {
		fill: #444;
		fill: var(--black);
	}
	.stroke {
		fill: none;
		stroke: #444;
		stroke: var(--black);
		stroke-width: 1.5;
		stroke-linecap: round;
		stroke-linejoin: round;
	}
	hr {
		border: 0;
		border-top: 1px solid #f1f1f1;
		margin: 0.75em 0;
	}
	.last-modif {
		margin-top: 1rem;
		font-size: .75rem;
	}
	@media screen and (max-width: 500px) {
		.wrapper {
			display: block;
		}
		.wrapper section+section {
			margin-top: 1rem;
		}
	}

	#signature {
		width: 100%;
		max-width: 200px;
		display: block;
		fill: none;
		stroke: #444;
		stroke-width: 3;
		stroke-linecap: round;
		stroke-linejoin: round;
	}
	#signature.animate {
		stroke-dasharray: 500;
		stroke-dashoffset: 500;
		--sign-duration: .85s;
		--sign-delay: 2s;
	}
	#signature.animate > path {
		animation-play-state: running;
		animation-name: sign-off;
		animation-duration: var(--sign-duration);
		animation-fill-mode: forwards;
		animation-timing-function: linear;
		animation-delay: var(--sign-delay);
	}
	#signature.animate > path:nth-of-type(2) {
		animation-delay: calc(var(--sign-delay) + var(--sign-duration));
	}
}
@keyframes sign-off {
	from { stroke-dashoffset: 500; }
	to { stroke-dashoffset: 0; }
}
</style>